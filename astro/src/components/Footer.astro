<style>
  :root {
    --primary-color: #202CA2;
    --secondary-color: #E62E78;
    --text-color: #333;
    --light-bg: #f5f5f5;
    --dark-bg: #1a1a1a;
    --oceanwp-footer-bg: #ffffff;
    --oceanwp-footer-text-color: #54595f;
    --oceanwp-footer-link-color: #54595f;
    --oceanwp-footer-link-hover-color: var(--secondary-color);
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .clr { clear: both; }

  .site-footer {
    background-color: var(--oceanwp-footer-bg);
    color: var(--oceanwp-footer-text-color);
    font-family: 'Poppins', sans-serif;
    font-size: 15px;
  }

  #footer-widgets {
    padding: 50px 0;
  }
  
  .elementor-section .elementor-container {
    display: flex;
    flex-wrap: wrap;
  }
  .elementor-column {
  }
  .elementor-col-25 { width: 25%; }

  .elementor-widget-wrap { 
    display: flex; 
    flex-direction: column; 
    height: 100%;
    padding: 10px;
  }
  .elementor-element-populated {
  }

  .elementor-column-gap-extended > .elementor-column > .elementor-widget-wrap {
    padding: 12px;
  }
  .elementor-column-gap-default > .elementor-column > .elementor-widget-wrap {
    padding: 10px;
  }

  .elementor-widget-image img {
    max-width: 150px;
    height: auto;
    margin-bottom: 20px;
  }

  .elementor-widget-text-editor p,
  .elementor-widget-text-editor {
    margin-bottom: 15px;
    line-height: 1.6;
    color: var(--oceanwp-footer-text-color);
    font-size: 14px;
  }
  .elementor-widget-text-editor p strong { font-weight: 600; }
  .elementor-widget-text-editor a {
    color: var(--oceanwp-footer-link-color);
    text-decoration: none;
  }
  .elementor-widget-text-editor a:hover {
    color: var(--oceanwp-footer-link-hover-color);
  }

  .elementor-widget-heading .elementor-heading-title {
    font-family: 'Roboto Slab', serif;
    color: #232323;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 20px;
    position: relative;
  }

  .elementor-widget-social-icons .elementor-social-icons-wrapper.elementor-grid {
    display: flex;
    gap: 10px;
  }
  .elementor-widget-social-icons .elementor-icon.elementor-social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: var(--primary-color);
    color: white;
    border-radius: 50%;
    font-size: 18px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .elementor-widget-social-icons .elementor-icon.elementor-social-icon:hover {
    background-color: var(--secondary-color);
    transform: translateY(-2px);
  }

  .elementor-widget-icon-list .elementor-icon-list-items {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .elementor-widget-icon-list .elementor-icon-list-item {
    margin-bottom: 10px;
  }
  .elementor-widget-icon-list .elementor-icon-list-item a {
    color: var(--oceanwp-footer-link-color);
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
  }
  .elementor-widget-icon-list .elementor-icon-list-item a:hover {
    color: var(--oceanwp-footer-link-hover-color);
    padding-left: 5px;
  }

  .hours-grid {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 5px 15px;
    font-size: 14px;
    color: var(--oceanwp-footer-text-color);
  }
  .hours-grid .day { font-weight: 500; }

  #footer-bottom {
    background-color: var(--dark-bg);
    padding: 20px 0;
    color: #ccc;
  }
  #footer-bottom-inner.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
  }
  .oceanwp-copyright {
    margin: 0;
  }
  .footer-bottom-links {
    display: flex;
    gap: 20px;
  }
  .footer-bottom-links a {
    color: #ccc;
    text-decoration: none;
  }
  .footer-bottom-links a:hover {
    color: var(--secondary-color);
  }

  @media (max-width: 1024px) {
    .elementor-col-25 { width: 50%; }
  }
  @media (max-width: 767px) {
    .elementor-col-25 { width: 100%; }
    #footer-bottom-inner.container {
      flex-direction: column;
      gap: 15px;
      text-align: center;
    }
    .elementor-widget-heading .elementor-heading-title {
      font-size: 20px;
    }
  }
</style> 