---
import WorkshopCard from "./workshop/WorkshopCard.astro";

type Workshop = {
  imageUrl: string;
  title: string;
  timeFrom: string;
};

type Props = {
  workshops?: Workshop[];
};

// Default workshop data if none provided
const defaultWorkshops: Workshop[] = [
  {
    imageUrl: "https://sydneychiropractorcbd.com.au/wp-content/uploads/2024/12/The-Main-Reasons-for-Lower-Back-Pain-1024x1024.jpg",
    title: "January 15, 2025",
    timeFrom: "1:30 p.m. Book Now"
  },
  {
    imageUrl: "https://sydneychiropractorcbd.com.au/wp-content/uploads/2024/12/The-Main-Reasons-for-Lower-Back-Pain-1024x1024.jpg",
    title: "January 22, 2025",
    timeFrom: "2:00 p.m. Book Now"
  },
  {
    imageUrl: "https://sydneychiropractorcbd.com.au/wp-content/uploads/2024/12/The-Main-Reasons-for-Lower-Back-Pain-1024x1024.jpg",
    title: "January 29, 2025",
    timeFrom: "10:00 a.m. Book Now"
  },
  {
    imageUrl: "https://sydneychiropractorcbd.com.au/wp-content/uploads/2024/12/The-Main-Reasons-for-Lower-Back-Pain-1024x1024.jpg",
    title: "February 5, 2025",
    timeFrom: "3:30 p.m. Book Now"
  },
  {
    imageUrl: "https://sydneychiropractorcbd.com.au/wp-content/uploads/2024/12/The-Main-Reasons-for-Lower-Back-Pain-1024x1024.jpg",
    title: "February 12, 2025",
    timeFrom: "1:00 p.m. Book Now"
  },
  {
    imageUrl: "https://sydneychiropractorcbd.com.au/wp-content/uploads/2024/12/The-Main-Reasons-for-Lower-Back-Pain-1024x1024.jpg",
