---
// Hero section component
---

<section class="hero">
  <div class="hero-background">
    <div class="overlay"></div>
  </div>
  <div class="hero-content">
    <div class="container">
      <div class="hero-text">
        <h2>SYDNEY CBD</h2>
        <h2>CHIROPRACTORS</h2>
        <h1>CLINIC 27</h1>
        <a href="https://clinic27intake.bookings.pracsuite.com/" class="btn btn-primary">
          <i class="fas fa-arrow-right"></i> Book Appointment
        </a>
      </div>
    </div>
  </div>
  
  <div class="hero-boxes">
    <div class="container">
      <div class="boxes-container">
        <div class="box">
          <h2><a href="#our_hours">FIND US</a></h2>
        </div>
        <div class="box">
          <h2><a href="#our_hours">OUR HOURS</a></h2>
        </div>
        <div class="box">
          <h2><a href="https://clinic27intake.bookings.pracsuite.com/" target="_blank">BOOK NOW</a></h2>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 80vh;
    min-height: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: white;
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/images/hero-bg.jpg');
    background-size: cover;
    background-position: center;
    z-index: -1;
  }
  
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }
  
  .hero-content {
    flex: 1;
    display: flex;
    align-items: center;
  }
  
  .hero-text {
    max-width: 600px;
    margin-left: auto;
    text-align: right;
  }
  
  .hero-text h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }
  
  .hero-text h2 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    background-color: var(--secondary-color);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .btn:hover {
    background-color: var(--primary-color);
    transform: translateY(-2px);
    color: white;
  }
  
  .btn i {
    margin-right: 8px;
  }
  
  .hero-boxes {
    margin-top: auto;
  }
  
  .boxes-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: -50px;
  }
  
  .box {
    background-color: var(--primary-color);
    padding: 20px;
    text-align: center;
    width: 200px;
    height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .box:hover {
    background-color: var(--secondary-color);
  }
  
  .box h2 {
    font-size: 1.5rem;
    margin: 0;
  }
  
  .box a {
    color: white;
    text-decoration: none;
  }
  
  @media (max-width: 768px) {
    .hero {
      height: 60vh;
      min-height: 400px;
    }
    
    .hero-text {
      text-align: center;
      margin: 0 auto;
    }
    
    .hero-text h1 {
      font-size: 2.5rem;
    }
    
    .hero-text h2 {
      font-size: 1.8rem;
    }
    
    .boxes-container {
      flex-direction: column;
      align-items: center;
      margin-bottom: 0;
    }
    
    .box {
      width: 100%;
      max-width: 300px;
    }
  }
</style> 