---
// Team component
const team = [
  {
    name: "Dr. Rosemarie Jabbour",
    title: "Principal Chiropractor",
    bio: "Dr. Rosemarie Jabbour is the founder and principal chiropractor at Clinic 27. With over 15 years of experience, she specializes in Advanced Biostructural Correctionâ„¢.",
    image: "/images/dr-rosemarie-jabbour.jpg"
  },
  {
    name: "Dr. Andrew Agius",
    title: "Chiropractor",
    bio: "Dr. Andrew Agius brings a wealth of knowledge in spinal health and posture correction. He is passionate about helping patients achieve optimal health through chiropractic care.",
    image: "/images/dr-andrew-agius.jpg"
  },
  {
    name: "Dr. Sarah Thompson",
    title: "Chiropractor",
    bio: "Dr. Sarah Thompson specializes in treating headaches, migraines, and neck pain. She takes a holistic approach to patient care, focusing on long-term wellness.",
    image: "/images/dr-sarah-thompson.jpg"
  }
];
---

<section class="team-section">
  <div class="container">
    <div class="section-header">
      <h2>Meet Our Team</h2>
      <div class="divider"></div>
      <p>Our experienced chiropractors are dedicated to providing exceptional care and helping you achieve optimal health.</p>
    </div>
    
    <div class="team-grid">
      {team.map(member => (
        <div class="team-card">
          <div class="team-image">
            <img src={member.image} alt={member.name} />
          </div>
          <div class="team-content">
            <h3>{member.name}</h3>
            <p class="team-title">{member.title}</p>
            <p class="team-bio">{member.bio}</p>
            <a href="/about-clinic27/" class="team-link">Read More <i class="fas fa-arrow-right"></i></a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-section {
    padding: 80px 0;
    background-color: white;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 20px;
  }
  
  .divider {
    width: 80px;
    height: 4px;
    background-color: var(--secondary-color);
    margin: 0 auto 20px;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }
  
  .team-card {
    background-color: var(--light-bg);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .team-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .team-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }
  
  .team-content {
    padding: 20px;
  }
  
  .team-content h3 {
    font-size: 1.5rem;
    margin-bottom: 5px;
    color: var(--primary-color);
  }
  
  .team-title {
    color: var(--secondary-color);
    font-weight: 500;
    margin-bottom: 15px;
  }
  
  .team-bio {
    margin-bottom: 20px;
    color: #666;
  }
  
  .team-link {
    display: inline-flex;
    align-items: center;
    color: var(--secondary-color);
    font-weight: 500;
  }
  
  .team-link i {
    margin-left: 8px;
    transition: transform 0.3s ease;
  }
  
  .team-link:hover i {
    transform: translateX(5px);
  }
  
  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 