---
// Testimonials component
const testimonials = [
  {
    name: "Sarah Johnson",
    text: "I've been seeing Dr. Rosemarie for my chronic back pain for 6 months now, and the improvement has been incredible. I can now enjoy activities I had given up on years ago.",
    rating: 5
  },
  {
    name: "Michael Chen",
    text: "After suffering from migraines for years, I finally found relief at Clinic 27. The team is professional, caring, and truly invested in their patients' wellbeing.",
    rating: 5
  },
  {
    name: "Emma Williams",
    text: "The posture correction treatment has made a huge difference in my daily life. As someone who works at a desk all day, I was experiencing constant neck pain. Not anymore!",
    rating: 5
  }
];
---

<section class="testimonials-section">
  <div class="container">
    <div class="section-header">
      <h2>What Our Patients Say</h2>
      <div class="divider"></div>
    </div>
    
    <div class="testimonials-grid">
      {testimonials.map(testimonial => (
        <div class="testimonial-card">
          <div class="testimonial-rating">
            {Array(testimonial.rating).fill().map(() => (
              <i class="fas fa-star"></i>
            ))}
          </div>
          <p class="testimonial-text">"{testimonial.text}"</p>
          <p class="testimonial-name">- {testimonial.name}</p>
        </div>
      ))}
    </div>
    
    <div class="testimonials-cta">
      <a href="https://www.google.com/search?q=Clinic+27+Sydney+reviews" target="_blank" class="btn">
        Read More Reviews <i class="fas fa-external-link-alt"></i>
      </a>
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 80px 0;
    background-color: var(--light-bg);
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 20px;
  }
  
  .divider {
    width: 80px;
    height: 4px;
    background-color: var(--secondary-color);
    margin: 0 auto 20px;
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .testimonial-card {
    background-color: white;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .testimonial-rating {
    margin-bottom: 20px;
    color: #FFD700;
  }
  
  .testimonial-text {
    font-style: italic;
    margin-bottom: 20px;
    color: #666;
    line-height: 1.6;
  }
  
  .testimonial-name {
    font-weight: 600;
    color: var(--primary-color);
  }
  
  .testimonials-cta {
    text-align: center;
    margin-top: 20px;
  }
  
  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 