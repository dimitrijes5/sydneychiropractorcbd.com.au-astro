---
import Layout from "../layouts/Layout.astro";
import contactBg from "../../public/Contact-us.webp";
import HeaderImage from "../components/HeaderImage.astro";
import UnderlinedHeader from "../components/UnderlinedHeader.astro";
import TextInput from "../components/TextInput.astro";
import TextArea from "../components/TextArea.astro";
import overlay from "../../public/bg-overlay.webp";
import PrimaryButton from "../components/PrimaryButton.astro";
---

<Layout title="Contact Us | Sydney Chiropractor CBD">
  <HeaderImage backgroundImage={contactBg.src} headerText="Contact Us" buttonText="Book an Appointment" />
  <!-- Two Column Grid Layout -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <UnderlinedHeader>Contact Us</UnderlinedHeader>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-20">
      
      <!-- Left Column - Form (60% width) -->
      <div class="md:w-full md:col-span-1 md:pr-4">
        <form id="contactForm" class="space-y-6">
          <!-- First Name and Email Row -->
          <div class="flex flex-col md:flex-row md:space-x-4 space-y-6 md:space-y-0">
            <div class="flex-1">
              <TextInput 
                label="First Name*" 
                placeholder="First Name" 
                id="firstName" 
                name="firstName" 
                required={true}
              />
            </div>
            <div class="flex-1">
              <TextInput 
                label="Email*" 
                placeholder="Email" 
                id="email" 
                name="email" 
                type="email"
                required={true}
              />
            </div>
          </div>
          
          <!-- Message TextArea -->
          <TextArea 
            label="Message" 
            placeholder="Your Message" 
            id="message" 
            name="message" 
            rows={6}
          />
          
          <!-- Submit Button -->
           <PrimaryButton text="Send Message" />
        </form>
      </div>
      
      <!-- Right Column - Background Image with Overlay -->
      <div class="relative h-96 md:h-full min-h-[400px]">
        <div 
          class="bg-cover bg-center h-full rounded-lg overflow-hidden relative"
          style={`background-image: url(${contactBg.src})`}
        >
          <!-- Dark overlay for background -->
          <div class="absolute inset-0 bg-black/40"></div>
          
          <!-- Overlay image at bottom -->
          <img 
            src={overlay.src} 
            alt="" 
            class="absolute inset-x-0 bottom-0 w-full h-auto object-cover"
          />
          
          <!-- Centered button -->
          <div class="absolute inset-0 flex items-center justify-center z-10">
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md px-6 py-3 shadow-lg transition-colors duration-200 transform hover:scale-105">
              Book an Appointment
            </button>
          </div>
        </div>
      </div>
      
    </div>
  </div>  
</Layout>


<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      // Here you would normally handle the form submission
      alert('Thank you for your message! We will get back to you soon.');
      form.reset();
    });
  }
</script> 